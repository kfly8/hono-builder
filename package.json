{
  "name": "hono-builder",
  "version": "0.1.0",
  "description": "A builder for Hono applications",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "test": "tsc --noEmit && vitest --run",
    "test:watch": "vitest --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --check --cache \"src/**/*.{js,ts,tsx}\"",
    "format:fix": "prettier --write --cache --cache-strategy metadata \"src/**/*.{js,ts,tsx}\"",
    "build": "bun ./build/build.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "vitest": "^3.2.2",
    "@hono/eslint-config": "^1.0.2",
    "eslint": "^9.10.0",
    "prettier": "^2.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "hono": "^4.7.11"
  }
}
