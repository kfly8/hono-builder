{
  "name": "hono-builder",
  "module": "src/index.ts",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "type": "module",
  "scripts": {
    "test": "tsc --noEmit && vitest --run",
    "test:watch": "vitest --watch",
    "test:examples": "echo 'Testing examples (ensure bun link hono-builder is set first)' && cd examples/01-basic && tsc --noEmit && cd ../02-rpc && tsc --noEmit && cd ../03-vite && tsc --noEmit && cd ../..",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --check --cache \"src/**/*.{js,ts,tsx}\"",
    "format:fix": "prettier --write --cache --cache-strategy metadata \"src/**/*.{js,ts,tsx}\""
  },
  "devDependencies": {
    "@types/bun": "latest",
    "vitest": "^3.2.2",
    "@hono/eslint-config": "^1.0.2",
    "eslint": "^9.10.0",
    "prettier": "^2.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "hono": "^4.7.11"
  }
}
